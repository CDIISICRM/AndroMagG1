<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nom_magazine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textColor="#081272"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prix_magazine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textColor="#aff53d"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ExpandableListView
        android:id="@+id/expandableListComments"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_weight="0.59" >
    </ExpandableListView>

    <LinearLayout
        android:id="@+id/group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/commenter"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="15sp"
            android:text="commenter" />

        <Button
            android:id="@+id/retour"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:onClick="onRetour"
            android:textSize="15sp"
            android:text="retour" />        
        
        <Button
            android:id="@+id/masquer"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="15sp"
            android:text="masquer" />
    </LinearLayout>

</LinearLayout>